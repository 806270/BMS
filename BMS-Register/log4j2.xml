<?xml version="1.0" encoding="UTF-8" ?>
<Configuration packages="com.microsoft.applicationinsights.log4j.v2">
    <Properties>
        <Property name="LOG_PATTERN">
            [%-5level] %d{yyyy-MM-dd HH:mm:ss} ${hostname} [%t] %c{1} - %msg%n
        </Property>
    </Properties>
    <Appenders>
    	 <!-- Rolling Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss} [%t] %c{1} - %msg%n</Pattern>
            </PatternLayout> 
        </Console>
         <!-- Azure application insights Appender -->
        <ApplicationInsightsAppender name="aiAppender"> 
        </ApplicationInsightsAppender>
        
        <!-- Rolling File Appender -->
			<RollingFile name="FileAppender" fileName="logs/bms.log"
			             filePattern="logs/log4j2-demo-%d{yyyy-MM-dd}-%i.log">
			    <PatternLayout>
			        <Pattern>${LOG_PATTERN}</Pattern>
			    </PatternLayout>
			    <Policies>
			        <SizeBasedTriggeringPolicy size="10MB" />
			    </Policies>
			    <DefaultRolloverStrategy max="10"/>
			</RollingFile>
 
    </Appenders>
    
    <Loggers>
    
    	 <!-- specific to this application log -->
        <Logger name="com.cts.bms" level="debug" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="FileAppender"/> 
        </Logger> 

               
		<!-- entire log -->
        <Root level="info">
            <AppenderRef ref="Console" /> 
            <AppenderRef ref="FileAppender"/> 
        </Root>
    </Loggers>
    
</Configuration> 